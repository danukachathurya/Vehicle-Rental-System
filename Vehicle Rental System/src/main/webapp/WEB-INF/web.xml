<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
    <servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>Controller.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping> 
	
	<servlet>
		<servlet-name>update_customer</servlet-name>
		<servlet-class>Controller.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>update_customer</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping> 
	
	<servlet>
		<servlet-name>delete_customer</servlet-name>
		<servlet-class>Controller.DeleteCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>delete_customer</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
         	<servlet-name>PaymentInsertServlet</servlet-name>
         	<servlet-class>Controller.PaymentInsertServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>PaymentInsertServlet</servlet-name>
         	<url-pattern>/insertPayment</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>update_payment</servlet-name>
         	<servlet-class>Controller.UpdatePaymentServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>update_payment</servlet-name>
         	<url-pattern>/updatePayment</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>delete_payment</servlet-name>
         	<servlet-class>Controller.DeletePaymentServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>delete_payment</servlet-name>
         	<url-pattern>/deletePayment</url-pattern>
         </servlet-mapping>  
         
         <servlet>
         	<servlet-name>card_details</servlet-name>
         	<servlet-class>Controller.CardServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>card_details</servlet-name>
         	<url-pattern>/card</url-pattern>
         </servlet-mapping>
         
         <servlet>
        <servlet-name>addVehicle</servlet-name>
        <servlet-class>Controller.AddVehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addVehicle</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updateVehicle</servlet-name>
        <servlet-class>Controller.UpdateVehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateVehicle</servlet-name>
        <url-pattern>/updateVehicle</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteVehicle</servlet-name>
        <servlet-class>Controller.DeleteVehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteVehicle</servlet-name>
        <url-pattern>/deleteVehicle</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>viewVehicle</servlet-name>
        <servlet-class>Controller.ViewVehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewVehicle</servlet-name>
        <url-pattern>/viewVehicle</url-pattern>
    </servlet-mapping>
         
</web-app>         